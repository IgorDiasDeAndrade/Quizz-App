<!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden">
  <style>
    .background-radial-gradient {
      background-color: hsl(218, 41%, 15%);
      background-image: radial-gradient(650px circle at 0% 0%,
          hsl(218, 41%, 35%) 15%,
          hsl(218, 41%, 30%) 35%,
          hsl(218, 41%, 20%) 75%,
          hsl(218, 41%, 19%) 80%,
          transparent 100%),
        radial-gradient(1250px circle at 100% 100%,
          hsl(218, 41%, 45%) 15%,
          hsl(218, 41%, 30%) 35%,
          hsl(218, 41%, 20%) 75%,
          hsl(218, 41%, 19%) 80%,
          transparent 100%);
    }

    #radius-shape-1 {
      height: 220px;
      width: 220px;
      top: -60px;
      left: -130px;
      background: radial-gradient(#44006b, #ad1fff);
      overflow: hidden;
    }

    #radius-shape-2 {
      border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
      bottom: -60px;
      right: -110px;
      width: 300px;
      height: 300px;
      background: radial-gradient(#44006b, #ad1fff);
      overflow: hidden;
    }

    .bg-glass {
      background-color: hsla(0, 0%, 100%, 0.9) !important;
      backdrop-filter: saturate(200%) blur(25px);
    }
  </style>

  <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
    <div class="row gx-lg-5 align-items-center mb-5">
      <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
        <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
          Administrator log in <br />
          <span style="color: hsl(218, 81%, 75%)">for Quizz-App</span>
        </h1>
        <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
         <%texts = Faker::Lorem.paragraphs %>
         <%texts.each do |text|%>
          <%= text%>
         <%end%>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
        <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
        <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

        <div class="card bg-glass">
          <div class="card-body px-4 py-5 px-md-5">
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"> <%= value %> </div>
          <% end %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                <%= f.label :email, class:"form-label", for:"form2Example1" %><br />
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
                <%= f.label :password, class:"form-label", for:"form2Example1" %><br />
              </div>

              <!-- Checkbox -->
              <div class="form-check d-flex justify-content-center mb-4">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me, class:"form-check-input" %>
                    <%= f.label :remember_me, class:"form-check-label" %>
                  </div>
                <% end %>
              </div>

              <!-- Submit button -->
              <%= f.submit "Log in", class:"btn btn-primary btn-block mb-4" %>

              <!-- Register buttons -->
              <div class="text-center">
                <%= render "admins/shared/links" %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->