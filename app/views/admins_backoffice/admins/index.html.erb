<div class="container">
<h1>Admins</h1>

  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th><%= link_to 'Novo', new_admins_backoffice_admin_path%></th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin|%>
          <tr>
          <th scope="row"><%= admin.id%></th>
          <td><%= admin.email%></td>
          <!-- transforma id especifico em parametro -->
          <td><%= link_to 'Editar', edit_admins_backoffice_admin_path(admin)%></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="float-end" ><%= paginate @admins%></div>

</div>
