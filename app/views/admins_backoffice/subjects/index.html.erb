<div class="container">
<h1>Assuntos</h1>

  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col" width='100px'>#</th>
        <th scope="col">Descrição</th>
        <th width='50px'><%= link_to 'Novo', new_admins_backoffice_subject_path%></th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject|%>
          <tr>
          <th scope="row"><%= subject.id%></th>
          <td><%= subject.description%></td>
          <!-- transforma id especifico em parametro -->
          <td><%= link_to 'Editar', edit_admins_backoffice_subject_path(subject)%></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="float-end" ><%= paginate @subjects%></div>

</div>
